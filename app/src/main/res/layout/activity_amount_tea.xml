<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/projectBgcolor"
    tools:context=".amount_tea">

    <TextView
        android:id="@+id/textView46"
        android:layout_width="265dp"
        android:layout_height="46dp"
        android:layout_marginTop="16dp"
        android:background="@color/projectBtns"
        android:fontFamily="@font/cambo"
        android:text="@string/addAmountTopic"
        android:textColor="@color/prjctBtnTextclr"
        android:textSize="40sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView16"
        android:layout_width="284dp"
        android:layout_height="247dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/rounded_corners"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView46"
        app:srcCompat="@drawable/teanew" />

    <TextView
        android:id="@+id/textView47"
        android:layout_width="145dp"
        android:layout_height="44dp"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/capriola"
        android:text="@string/drink4"
        android:textColor="@color/projectText"
        android:textSize="40sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.601"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView16" />

    <SeekBar
        android:id="@+id/seekBarTeaAmount"
        android:layout_width="347dp"
        android:layout_height="49dp"
        android:layout_marginBottom="80dp"
        android:background="@drawable/rounded_corners"
        android:backgroundTint="@color/popUpbtn"
        android:max="1000"
        android:progress="0"
        app:layout_constraintBottom_toTopOf="@+id/btnTeaAmount"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView48"
        android:layout_width="153dp"
        android:layout_height="28dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/capriola"
        android:text="@string/addAmountTopic"
        android:textColor="@color/projectText"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/seekBarTeaAmount"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView47"
        app:layout_constraintVertical_bias="0.14" />

    <TextView
        android:id="@+id/txtTeaAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/capriola"
        android:textColor="@color/projectText"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/seekBarTeaAmount"
        app:layout_constraintVertical_bias="0.146" />

    <Button
        android:id="@+id/btnTeaAmount"
        android:layout_width="111dp"
        android:layout_height="41dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/rounded_corners"
        android:fontFamily="@font/aldrich"
        android:text="Done"
        android:textColor="@color/prjctBtnTextclr"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"  />

</androidx.constraintlayout.widget.ConstraintLayout>