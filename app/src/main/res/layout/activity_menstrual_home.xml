<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:accessibilityTraversalBefore="@id/calendarNavigaetBtn"
    tools:context=".MenstrualHome">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/homelayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/altback"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <Button
            android:id="@+id/addRecordNavigatebtn"
            android:layout_width="0dp"
            android:layout_height="111dp"
            android:backgroundTint="@color/PeriodBtn"
            android:fontFamily="sans-serif-smallcaps"
            android:onClick="goToAddNotes"
            android:text="@string/ViewAddRecordBTN"
            android:textAlignment="viewStart"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@android:color/background_light"
            android:textSize="36sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/calendarNavigaetBtn"
            app:layout_constraintVertical_bias="0.509" />

        <Button
            android:id="@+id/calendarNavigaetBtn"
            android:layout_width="0dp"
            android:layout_height="112dp"
            android:backgroundTint="@color/PeriodBtn"
            android:fontFamily="sans-serif-smallcaps"
            android:onClick="goToCalendar"
            android:text="@string/ViewCalendarBtn"
            android:textAlignment="viewStart"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@android:color/background_light"
            android:textSize="36sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.731" />

        <TextView
            android:id="@+id/welcomeText"
            android:layout_width="249dp"
            android:layout_height="89dp"
            android:fontFamily="sans-serif-smallcaps"
            android:text="@string/PAppWelcome"
            android:textColor="@color/PeriodCaptions"
            android:textSize="36sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.617"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.045" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="200dp"
            android:layout_height="115dp"
            android:fontFamily="sans-serif-smallcaps"
            android:text="@string/PAppInitiate"
            android:textColor="@color/PeriodCaptions"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.102"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.14" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="263dp"
            android:layout_height="349dp"
            android:contentDescription="@string/HomeStart"
            android:onClick="addRecord"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.272"
            app:srcCompat="@drawable/ss" />

        <ImageView
            android:id="@+id/imageViewCalendar"
            android:layout_width="130dp"
            android:layout_height="110dp"
            android:contentDescription="@string/ViewCalendarBtn"
            android:elevation="@android:dimen/thumbnail_width"
            app:layout_constraintBottom_toBottomOf="@+id/calendarNavigaetBtn"
            app:layout_constraintEnd_toEndOf="@+id/calendarNavigaetBtn"
            app:layout_constraintHorizontal_bias="0.975"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/calendarNavigaetBtn"
            app:layout_constraintVertical_bias="1.0"
            app:srcCompat="@drawable/calendaricon" />

        <ImageView
            android:id="@+id/imageViewaddNote"
            android:layout_width="116dp"
            android:layout_height="98dp"
            android:layout_marginBottom="16dp"
            android:elevation="@android:dimen/thumbnail_width"
            app:layout_constraintBottom_toBottomOf="@+id/addRecordNavigatebtn"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="@+id/addRecordNavigatebtn"
            app:layout_constraintTop_toTopOf="@+id/addRecordNavigatebtn"
            app:layout_constraintVertical_bias="0.0"
            app:srcCompat="@drawable/addnoteicon" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>