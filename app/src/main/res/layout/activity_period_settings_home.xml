<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/settingsBg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/projectBgcolor"
    tools:context=".PeriodSettingsHome">

    <TextView
        android:id="@+id/PSettings"
        android:layout_width="348dp"
        android:layout_height="66dp"
        android:fontFamily="@font/cambo"
        android:text="@string/PSettingCaption"
        android:textAlignment="center"
        android:textColor="@color/projectText"
        android:textSize="40sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.407"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.024" />

    <View
        android:id="@+id/dividerSettings"
        android:layout_width="400dp"
        android:layout_height="1dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.075"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.13" />

    <Button
        android:id="@+id/PLengthSet"
        android:layout_width="265dp"
        android:layout_height="80dp"
        android:layout_marginStart="16dp"
        android:background="@drawable/rounded_corners"
        android:backgroundTint="@color/projectBtns"
        android:fontFamily="@font/aldrich"
        android:onClick="PeriodLengthSet"
        android:text="@string/PSetting1"
        android:textColor="@color/prjctBtnTextclr"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.248" />

    <Button
        android:id="@+id/PCyclelnSet"
        android:layout_width="265dp"
        android:layout_height="80dp"
        android:layout_marginStart="16dp"
        android:background="@drawable/rounded_corners"
        android:backgroundTint="@color/projectBtns"
        android:fontFamily="@font/aldrich"
        android:onClick="CycleLengthSet"
        android:text="@string/PSetting2"
        android:textColor="@color/prjctBtnTextclr"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.528" />

    <Button
        android:id="@+id/button3"
        android:layout_width="265dp"
        android:layout_height="80dp"
        android:background="@drawable/rounded_corners"
        android:backgroundTint="@color/projectBtns"
        android:fontFamily="@font/aldrich"
        android:hint="@string/HIntSEt3"
        android:onClick="OvulaionlengthSet"
        android:text="@string/PSetting3"
        android:textColor="@color/prjctBtnTextclr"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.109"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.806" />

    <TextView
        android:id="@+id/getPeriodLength"
        android:layout_width="85dp"
        android:layout_height="79dp"
        android:fontFamily="@font/capriola"
        android:hint="@string/HintSet1"
        android:textColor="@color/prjctBtnTextclr"
        android:textSize="24sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/PLengthSet"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/PLengthSet" />

    <TextView
        android:id="@+id/getCycleLength"
        android:layout_width="97dp"
        android:layout_height="70dp"
        android:fontFamily="@font/capriola"
        android:hint="@string/HintSEt2"
        android:textColor="@color/prjctBtnTextclr"
        android:textSize="24sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/PCyclelnSet"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/PCyclelnSet" />

    <TextView
        android:id="@+id/getOvulationLength"
        android:layout_width="90dp"
        android:layout_height="70dp"
        android:fontFamily="@font/capriola"
        android:hint="@string/HIntSEt3"
        android:textColor="@color/prjctBtnTextclr"
        android:textSize="24sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/button3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/button3" />

</androidx.constraintlayout.widget.ConstraintLayout>