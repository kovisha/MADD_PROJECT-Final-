<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/projectBgcolor"
    tools:context=".select_drink">

    <TextView
        android:id="@+id/txtDrinkAdd"
        android:layout_width="326dp"
        android:layout_height="42dp"
        android:layout_marginTop="32dp"
        android:background="@color/projectBtns"
        android:fontFamily="@font/cambo"
        android:text="@string/addDrinkTopic"
        android:textColor="@color/prjctBtnTextclr"
        android:textSize="40sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imgWater"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginStart="108dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/round_button"
        android:backgroundTint="@color/projectBtns"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtDrinkAdd"
        app:srcCompat="@drawable/water" />

    <TextView
        android:id="@+id/textView31"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:layout_marginEnd="108dp"
        android:fontFamily="@font/capriola"
        android:text="@string/drink1"
        android:textColor="@color/projectText"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.645"
        app:layout_constraintStart_toEndOf="@+id/imgWater"
        app:layout_constraintTop_toBottomOf="@+id/txtDrinkAdd" />

    <ImageView
        android:id="@+id/imgCoffee"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginStart="108dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/round_button"
        android:backgroundTint="@color/projectBtns"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgWater"
        app:srcCompat="@drawable/coffee" />

    <ImageView
        android:id="@+id/imgMilk"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginStart="108dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/round_button"
        android:backgroundTint="@color/projectBtns"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgCoffee"
        app:srcCompat="@drawable/milk" />

    <ImageView
        android:id="@+id/imgTea"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginStart="108dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/round_button"
        android:backgroundTint="@color/projectBtns"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgMilk"
        app:srcCompat="@drawable/tea" />

    <ImageView
        android:id="@+id/imgJuice"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginStart="108dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/round_button"
        android:backgroundTint="@color/projectBtns"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgTea"
        app:srcCompat="@drawable/juice" />

    <TextView
        android:id="@+id/textView32"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="68dp"
        android:fontFamily="@font/capriola"
        android:text="@string/drink3"
        android:textColor="@color/projectText"
        android:textSize="24sp"
        app:layout_constraintStart_toEndOf="@+id/imgCoffee"
        app:layout_constraintTop_toBottomOf="@+id/textView31" />

    <TextView
        android:id="@+id/textView33"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="80dp"
        android:fontFamily="@font/capriola"
        android:text="@string/drink2"
        android:textColor="@color/projectText"
        android:textSize="24sp"
        app:layout_constraintStart_toEndOf="@+id/imgMilk"
        app:layout_constraintTop_toBottomOf="@+id/textView32" />

    <TextView
        android:id="@+id/textView34"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="64dp"
        android:fontFamily="@font/capriola"
        android:text="@string/drink4"
        android:textColor="@color/projectText"
        android:textSize="24sp"
        app:layout_constraintStart_toEndOf="@+id/imgTea"
        app:layout_constraintTop_toBottomOf="@+id/textView33" />

    <TextView
        android:id="@+id/textView35"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="72dp"
        android:fontFamily="@font/capriola"
        android:text="@string/drink5"
        android:textColor="@color/projectText"
        android:textSize="24sp"
        app:layout_constraintStart_toEndOf="@+id/imgJuice"
        app:layout_constraintTop_toBottomOf="@+id/textView34" />



</androidx.constraintlayout.widget.ConstraintLayout>