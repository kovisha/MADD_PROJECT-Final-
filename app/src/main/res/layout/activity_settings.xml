    <Switch
        android:id="@+id/reminderSwitch"
        android:layout_width="161dp"
        android:layout_height="37dp"
        android:background="@color/projectBgcolor"
        android:fontFamily="@font/bubblegum_sans"
        android:text="@string/settings_reminder"
