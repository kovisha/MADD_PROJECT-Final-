<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    tools:context=".viewMyWater">

    <CalendarView
        android:id="@+id/calendarView"
        android:layout_width="390dp"
        android:layout_height="349dp"
        android:background="@drawable/calender_customization"
        android:maxDate="@string/maxDate"
        android:minDate="@string/minDate"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.036" />

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="368dp"
        android:layout_height="35dp"
        android:background="@color/design_default_color_on_primary"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.488"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.69">

        <TextView
            android:id="@+id/DrankAmt"
            android:layout_width="400dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/btnColor"
            android:fontFamily="@font/capriola"
            android:text="500ml"
            android:textAlignment="textEnd"
            android:textColor="@color/prjctBtnTextclr"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/textView13"
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/btnColor"
            android:fontFamily="@font/capriola"
            android:text="of"
            android:textAlignment="center"
            android:textColor="@color/prjctBtnTextclr"
            android:textSize="24sp" />


        <TextView
            android:id="@+id/totalAmt"
            android:layout_width="400dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/btnColor"
            android:fontFamily="@font/capriola"
            android:text="2000ml"
            android:textAlignment="textStart"
            android:textColor="@color/prjctBtnTextclr"
            android:textSize="24sp" />
    </LinearLayout>

    <Button
        android:id="@+id/btnAddDrink"
        android:layout_width="157dp"
        android:layout_height="34dp"
        android:background="@drawable/rounded_corners"
        android:fontFamily="@font/aldrich"
        android:onClick="addDrink"
        android:text="@string/addDrink"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/btnMoreWater"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.858"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnMoreWater"
        android:layout_width="166dp"
        android:layout_height="31dp"
        android:background="@drawable/rounded_corners"
        android:fontFamily="@font/aldrich"
        android:onClick="viewTips"
        android:text="@string/moreTools"
        android:textColor="@color/prjctBtnTextclr"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.151"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.974" />

    <TextView
        android:id="@+id/txtRemaining"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="84dp"
        android:fontFamily="@font/capriola"
        android:text="Remaining : "
        android:textColor="@color/projectText"
        android:textColorHighlight="@color/projectText"
        android:textColorHint="@color/projectText"
        android:textColorLink="@color/projectText"
        android:textCursorDrawable="@color/projectText"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/btnMoreWater"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout3"
        app:layout_constraintVertical_bias="0.503" />

    <TextView
        android:id="@+id/remainingAmt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/capriola"
        android:text="1500ml"
        android:textColor="@color/projectText"
        android:textColorHighlight="@color/projectText"
        android:textColorHint="@color/projectText"
        android:textColorLink="@color/projectText"
        android:textCursorDrawable="@color/projectText"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/btnAddDrink"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.155"
        app:layout_constraintStart_toEndOf="@+id/txtRemaining"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout3"
        app:layout_constraintVertical_bias="0.505" />

</androidx.constraintlayout.widget.ConstraintLayout>