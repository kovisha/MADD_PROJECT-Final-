<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    android:scrollbarThumbHorizontal="@color/WaterHomeText"
    android:scrollbarThumbVertical="@color/WaterHomeText"
    tools:context=".water_calculation"
    tools:ignore="ExtraText">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="285dp"
        android:layout_height="36dp"
        android:background="@color/projectBtns"
        android:fontFamily="@font/cambo"
        android:text="@string/water_calculation_title"
        android:textColor="@color/prjctBtnTextclr"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.051" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="125dp"
        android:layout_height="44dp"
        android:fontFamily="@font/capriola"
        android:text="@string/water_calculation_units"
        android:textColor="@color/txtColor"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.195"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.298" />

        <Spinner
            android:id="@+id/UnitSpinner"
            android:layout_width="168dp"
            android:layout_height="34dp"
            android:fontFamily="@font/cambo"
            android:scrollbarThumbHorizontal="@color/colorAccentHome"
            android:scrollbarThumbVertical="@color/colorPrimary"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/textView4"
            app:layout_constraintTop_toTopOf="parent"
           app:layout_constraintVertical_bias="0.294" />



    <TextView
        android:id="@+id/exerciseSpinner"
        android:layout_width="393dp"
        android:layout_height="35dp"
        android:fontFamily="@font/capriola"
        android:text="@string/water_calculation_exercise"
        android:textAlignment="center"
        android:textColor="@color/txtColor"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        app:layout_constraintVertical_bias="0.183" />

    <Spinner
        android:id="@+id/exercise_spinner"
        android:layout_width="257dp"
        android:layout_height="35dp"
        android:fontFamily="@font/cambo"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.59"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/exerciseSpinner"
        app:layout_constraintVertical_bias="0.129" />

    <Button
        android:id="@+id/btnWaterCalcDone"
        android:layout_width="176dp"
        android:layout_height="51dp"
        android:background="@drawable/rounded_corners"
        android:fontFamily="@font/aldrich"
        android:onClick="waterCalcDone"
        android:shadowRadius="5"
        android:text="Continue"
        android:textColor="@color/prjctBtnTextclr"
        android:textSize="26sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.548"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.797" />

    <Button
        android:id="@+id/btnCancelCalc"
        android:layout_width="116dp"
        android:layout_height="47dp"
        android:background="@drawable/rounded_corners"
        android:fontFamily="@font/aldrich"
        android:text="@android:string/cancel"
        android:textColor="#FFFFFF"
        android:textSize="23sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.528"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnWaterCalcDone"
        app:layout_constraintVertical_bias="0.329" />

    <TextView
        android:id="@+id/textView30"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="104dp"
        android:layout_marginTop="21dp"
        android:layout_marginEnd="103dp"
        android:layout_marginBottom="32dp"
        android:background="@color/projectBtns"
        android:fontFamily="@font/cambo"
        android:text="@string/preference"
        android:textColor="@color/prjctBtnTextclr"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/textView4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:layout_constraintVertical_bias="0.166" />

</androidx.constraintlayout.widget.ConstraintLayout>