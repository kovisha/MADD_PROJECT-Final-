<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    tools:context=".water_calculation"
    tools:ignore="ExtraText">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="285dp"
        android:layout_height="36dp"
        android:background="@color/projectBtns"
        android:fontFamily="@font/cambo"
        android:text="@string/water_calculation_title"
        android:textColor="@color/prjctBtnTextclr"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.051" />


    <TextView
        android:id="@+id/exerciseSpinner"
        android:layout_width="393dp"
        android:layout_height="35dp"
        android:layout_marginTop="128dp"
        android:fontFamily="@font/capriola"
        android:text="@string/water_calculation_exercise"
        android:textAlignment="center"
        android:textColor="@color/txtColor"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.111"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView30" />

    <RadioGroup
        android:id="@+id/ExTime"
        android:layout_width="257dp"
        android:layout_height="235dp"
        android:background="@drawable/rounded_corners"
        android:backgroundTint="@color/prjctBtnTextclr"
        android:gravity="center"
        android:paddingLeft="10dp"
        app:layout_constraintBottom_toTopOf="@+id/btnWaterCalcDone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.545"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/exerciseSpinner"
        app:layout_constraintVertical_bias="0.141">


        <RadioButton
            android:id="@+id/ExTime1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:checked="true"
            android:fontFamily="@font/capriola"
            android:text="@string/time1"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="18sp" />

        <RadioButton
            android:id="@+id/ExTime2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/capriola"
            android:text="@string/time2"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="18sp" />

        <RadioButton
            android:id="@+id/ExTime3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/capriola"
            android:text="@string/time3"
            android:textColor="@color/colorPrimary"
            android:textSize="18sp" />

        <RadioButton
            android:id="@+id/ExTime4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/capriola"
            android:text="@string/time4"
            android:textColor="@color/colorPrimary"
            android:textSize="18sp" />

        <RadioButton
            android:id="@+id/ExTime5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/capriola"
            android:text="@string/time5"
            android:textColor="@color/colorPrimary"
            android:textSize="18sp" />


    </RadioGroup>

    <Button
        android:id="@+id/btnWaterCalcDone"
        android:layout_width="164dp"
        android:layout_height="50dp"
        android:layout_marginStart="36dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/rounded_corners"
        android:fontFamily="@font/aldrich"
        android:onClick="waterCalcDone"
        android:shadowRadius="5"
        android:text="Continue"
        android:textColor="@color/prjctBtnTextclr"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnCancelCalc"
        android:layout_width="116dp"
        android:layout_height="47dp"
        android:background="@drawable/rounded_corners"
        android:fontFamily="@font/aldrich"
        android:onClick="exitWaterTrack"
        android:text="@android:string/cancel"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/btnWaterCalcDone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnWaterCalcDone" />

    <TextView
        android:id="@+id/textView30"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="104dp"
        android:layout_marginTop="21dp"
        android:layout_marginEnd="103dp"
        android:background="@color/projectBtns"
        android:fontFamily="@font/cambo"
        android:text="@string/preference"
        android:textColor="@color/prjctBtnTextclr"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="72dp"
        android:layout_marginTop="60dp"
        android:fontFamily="@font/capriola"
        android:text="@string/water_calculation_weight"
        android:textColor="@color/projectText"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/exerciseSpinner"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView30"
        app:layout_constraintVertical_bias="0.027" />

    <EditText
        android:id="@+id/edtWeight"
        android:layout_width="180dp"
        android:layout_height="43dp"
        android:ems="10"
        android:fontFamily="@font/capriola"
        android:inputType="number"
        android:textColor="@color/projectText"
        app:layout_constraintBaseline_toBaselineOf="@+id/textView4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView4" />

</androidx.constraintlayout.widget.ConstraintLayout>