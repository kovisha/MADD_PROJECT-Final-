<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/custom_toast_welldone"
    android:orientation="vertical"
    android:background="@drawable/rounded_corners"
    android:backgroundTint="@color/colorPrimaryDark"
    >

    <ImageView
        android:id="@+id/custom_toast_image"
        android:layout_width="144dp"
        android:layout_height="110dp"
        android:src="@drawable/greatjob"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="-19dp"
        tools:layout_editor_absoluteY="0dp" />

    <TextView
        android:id="@+id/custom_toast_message_done"
        android:layout_width="291dp"
        android:layout_height="85dp"
        android:contentDescription="To"
        android:fontFamily="@font/capriola"
        android:paddingLeft="10dp"
        android:paddingTop="20dp"
        android:paddingEnd="20dp"
        android:paddingRight="10dp"
        android:text="Great!! You Reached Your target"
        android:textAlignment="center"
        android:textColor="@color/projectText"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/custom_toast_image"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.36"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>